#!/bin/sh
  
SCRIPT_DIR="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# set up working directory

cd $SCRIPT_DIR

cd ..

set -e
arg1=$1
lib=${arg1%.*}

parts=$(grep  "^$1 parts= " built/decs.txt | cut -d" " -f3-)

grep  "^$1 " built/decs.txt | cut -d" " -f2- > built/$lib.libsrc 
echo " Library= $lib" >> built/$lib.libsrc
 for  fullname in $parts 
 do 
  if [[ ${fullname:(-3)} == ".ls" || ${fullname:(-7)} == ".libsrc"  ]] 
  then
 cat B $fullname  >> built/$lib.libsrc
  fi
done 

